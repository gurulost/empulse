modules = ["php-8.2", "web", "nodejs-20", "vue-node-20", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Laravel Dev Server"

[[workflows.workflow]]
name = "Laravel Dev Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "APP_DEBUG=false php artisan app:install --seed-if-empty --force && (php artisan queue:work --tries=1 --sleep=3 &) && APP_DEBUG=false php artisan serve --host=0.0.0.0 --port=5000"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "vm"
healthCheckPath = "/up"
run = ["bash", "-lc", "php artisan serve --host=0.0.0.0 --port=${PORT:-5000}"]
build = ["bash", "-lc", "composer install --no-dev --optimize-autoloader --no-interaction --prefer-dist && npm ci && npm run build"]

[userenv]

[userenv.shared]
DB_CONNECTION = "pgsql"
SURVEY_STRICT_VALIDATION_ENABLED = "false"

[userenv.production]
APP_ENV = "production"
APP_DEBUG = "false"
SESSION_DRIVER = "file"
REPLIT_DEPLOYMENT = "1"
QUEUE_CONNECTION = "database"

[userenv.development]
healthCheckPath = "/up"
