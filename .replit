modules = ["php-8.2", "web", "nodejs-20", "vue-node-20", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Laravel Dev Server"

[[workflows.workflow]]
name = "Laravel Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "APP_DEBUG=false php artisan app:install --seed-if-empty --force && APP_DEBUG=false php artisan serve --host=0.0.0.0 --port=5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-lc", "APP_DEBUG=false php artisan app:install --seed-if-empty --force && APP_DEBUG=false php artisan serve --host=0.0.0.0 --port=5000"]
build = ["npm", "run", "build"]

[userenv]

[userenv.shared]
DB_CONNECTION = "pgsql"
